inherit rubygem

NAME="ruby-bcrypt"
VERSION=3.1.10
RELEASE=1
CATEGORY="Ruby"
SUMMARY="Ruby password hash extension"
DESCRIPTION="bcrypt() is a sophisticated and secure hash algorithm designed by
The OpenBSD project for hashing passwords. bcrypt-ruby provides a simple,
humane wrapper for safely handling passwords."

PKG_NAMES="${NAME} ${NAME}-doc"
ruby_bcrypt_CONTENTS="${RUBYGEM_EXTDIR#/} ${RUBYGEM_INSTDIR#/} ${RUBYGEM_SPEC#/}"
ruby_bcrypt_doc_CONTENTS=${RUBYGEM_DOCDIR#/}
